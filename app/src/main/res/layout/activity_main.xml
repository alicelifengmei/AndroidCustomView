<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    >

    <Button
        android:id="@+id/btn_custom_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义TextView"
        android:onClick="onClickBtn"
        />
    <Button
        android:id="@+id/btn_custom_circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义圆百分比"
        android:onClick="onClickBtn"
        />
    <Button
        android:id="@+id/btn_custom_view_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="组合自定义控件"
        android:onClick="onClickBtn"
        />
    <Button
        android:id="@+id/btn_custom_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="标签自定义控件"
        android:onClick="onClickBtn"
        />

</LinearLayout>
