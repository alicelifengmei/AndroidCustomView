<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.customerview.activity.PercentCircleViewActivity">
    <com.example.administrator.customerview.view.PercentCircleView
        android:background="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        custom:gravity="left"
        custom:progress="30"
        custom:progressColor="@android:color/holo_purple"
        custom:backgroundColor="@color/colorPrimary"
        custom:radius="50dp"
        />
</RelativeLayout>
